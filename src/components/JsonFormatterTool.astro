---
import initJsonFormatter from "json-formatter";
---

<section class="my-8 p-6 bg-neutral-800 rounded-lg">
  <h2 class="text-2xl font-bold text-white mb-4">JSON Formatter</h2>

  <div class="flex flex-col space-y-4">
    <textarea
      id="jsonInput"
      placeholder="Paste JSON here"
      class="w-full p-2 rounded bg-neutral-700 text-white"
      rows="6"></textarea>

    <div class="flex flex-wrap gap-2">
      <button
        id="formatJsonBtn"
        class="px-4 py-2 rounded bg-blue-600 text-white"
      >
        Format JSON
      </button>
      <button
        id="clearJsonBtn"
        class="px-4 py-2 rounded bg-yellow-600 text-white"
      >
        Clear
      </button>
    </div>

    <span id="validationStatus" class="mt-1 text-xs h-4"></span>

    <textarea
      id="jsonOutput"
      placeholder="Formatted JSON appears here"
      class="w-full p-2 rounded bg-neutral-700 text-white"
      rows="6"
      readonly></textarea>

    <button
      id="copyJsonOutputBtn"
      class="self-start px-4 py-2 rounded bg-green-600 text-white"
    >
      Copy Output
    </button>
  </div>

  <script type="module">
    import initJsonFormatter from "/modules/json-formatter/dist/index.js";
    initJsonFormatter();
  </script>
</section>
