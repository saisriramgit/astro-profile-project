---
import initBase64Tool from "base64-tool";
---

<section class="my-8 p-6 bg-neutral-800 rounded-lg">
  <h2 class="text-2xl font-bold text-white mb-4">Base64 Encoder / Decoder</h2>

  <div class="flex flex-col space-y-4">
    <textarea
      id="inputTextEncDecTool"
      placeholder="Enter text here"
      class="w-full p-2 rounded bg-neutral-700 text-white"
      rows="4"></textarea>

    <div class="flex flex-wrap gap-2">
      <button
        id="encodeBase64Btn"
        class="px-4 py-2 rounded bg-blue-600 text-white"
      >
        Encode
      </button>
      <button
        id="decodeBase64Btn"
        class="px-4 py-2 rounded bg-blue-600 text-white"
      >
        Decode
      </button>
      <button
        id="encodeUrlBtn"
        class="px-4 py-2 rounded bg-blue-600 text-white"
      >
        URL Encode
      </button>
      <button
        id="decodeUrlBtn"
        class="px-4 py-2 rounded bg-blue-600 text-white"
      >
        URL Decode
      </button>
    </div>

    <textarea
      id="outputTextEncDecTool"
      placeholder="Result appears here"
      class="w-full p-2 rounded bg-neutral-700 text-white"
      rows="4"
      readonly></textarea>

    <button
      id="copyOutputBtnEncDecTool"
      class="self-start px-4 py-2 rounded bg-green-600 text-white"
    >
      Copy Output
    </button>
  </div>

  <script type="module">
    import initBase64Tool from "/modules/base64-tool/dist/index.js";
    initBase64Tool();
  </script>
</section>
